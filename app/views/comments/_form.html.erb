<div class="row">
  <div class="comment-form">
  <!--it's different than form_for-> i'ts use if I want to redirect to a new page-->
    <%= form_with model: [commentable, local] do |f| %>
    <div class="form-group">
      <%= f.rich_text_area :body, placeholder: "Say something...", class:"reply-form-#{commentable.id}", id: f.object_id, method: :patch %>
      <%= f.submit "Post", class:'btn btn-dark float-right' %>
    </div>
    <% end %>
  </div>
</div>

<script>
  $(document).on("turbolinks:load", function(){
    $(".trix-button-group--file-tools").remove();
    document.addEventListener("trix-file-accept", function(event){
      event.preventDefault();
    });
  });
</script>