<div class="row">
  <div class="col-3">
    <div class="row">
      <% if comment.user.avatar.attached? %>
      <%= image_tag(comment.user.avatar, class:'comment-avatar') %>
      <% else %>
            <%= image_tag('/default_profile.png', class:'comment-avatar') %>
      <% end %>
    </div>
    <div class="row">
      <div class="comment-timestamp" id="edit-history-text-<%= comment.id %>">
        <% render 'comments/edit_history_text', comment: comment %>
      </div>
    </div>
  </div>

  <div class="col-9">
    <div class="row">
      <div class="col-8">
        <div class="comment-username">
          <%= comment.user.username %>
        </div>
          <div class="comment-number">
            #<%= comment.comment_number %>
          </div>
      </div>

      <% if current_user && () %>
    </div>
  </div>
</div>

<!--Modal of edit_history_text-->

<div class="modal fade" id="edit_history" tabindex="-1" role="dialog" aria-labelleddy=":Comment Edit History" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        
        <h5 class="modal-title" id="edit_history_title"><%= comment.user.username %>'s Edit History</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="edit_history-body">
        <%= render 'comments/edit_history', comment: comment %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

