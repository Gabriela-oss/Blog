<div class="container">
  <% @posts.each do |post| %>
    <div class="row"> 
      <div class="card mb-3">
        <img class="card-img-top"
        src="<% url_for post.optimize_image(post.image, 506, 180)%>"
        alt="Blog Post Image Card"
        />
        <div class="card_body">
          <h5 class="card-title">
            <%= link_to post.title, post %>
          </h5>
          <p class="card-text"><%= post.body.to_plain_text.truncate_words(50) %></p>
          <p class="card-text">
            <small class="text-muted">
              <%= post.updated_at.strftime("%A, %B %e, %Y") %> by
              <%= post.user.username %> | <%= pluralize(post.views, "View") %> | comments 0
            </small>
          </p>
        </div>
      </div>
    </div>
          binding.pry
  <% end %>
</div>