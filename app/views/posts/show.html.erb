<div style="width:100%; height:300px; overflow-y:hidden">
  <%= image_tag(@post.photo, style:'width:100%') %>
</div>
<div class="container" style="margin-top: 2em">
  <div class="row">
    <div class="image" style="width:100%">
      <h1 class="display-4">
        <%= link_to @post.title, root_path %>
      </h1>
      <p class="lead">
        <%= @post.updated_at.strftime("%A, %B %e, %Y") %> by <%= @post.user.username %> | <%= pluralize(@post.views, "View") %>
      </p>
      <hr class="my-4"/>
      <div class="post_body">
        <%= @post.body %>
      </div>
    </div>
  </div>
</div>

<div class="container">
<!--we need to give it the parent of the thing we are creating(the parent it's the post), also this is the way to create something called local, this has a new comment in it, so when we do the form builder we can do that -->
  <%= render 'comments/form', commentable: @post, local: Comment.new %> 

  <div id="comment-pane">
    <% @comment.each do |comment| %>
    <% render comment %>
    <% end %>
  </div>
</div>